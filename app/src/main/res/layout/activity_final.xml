<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FinalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/osces"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/v_logo"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:src="@drawable/osces"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_below="@id/logo1"
            android:layout_marginTop="120dp"
            android:padding="36dp"/>

        <TextView
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/v_logo"
            android:fontFamily="@font/productsans_bold"
            android:includeFontPadding="false"
            android:padding="15dp"
            android:text="Thank you \nfor voting!"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/v2"
            android:layout_below="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/productsans_bold"
            android:text="You"/>

        <Button
            android:id="@+id/logout"
            android:onClick="logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button2_ripple"
            android:fontFamily="@font/productsans_bold"
            android:padding="15dp"
            android:text="@string/logout"
            android:textColor="@android:color/white"
            android:textSize="17sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>